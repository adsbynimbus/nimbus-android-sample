<resources>
    <style name="Theme.NimbusSample" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/proxima_nova</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">@color/tertiary</item>
        <item name="colorSwitchThumbNormal">@color/tertiary</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/navigation_padding</item>
        <item name="android:paddingEnd">@dimen/navigation_padding</item>
    </style>

    <style name="Header.Main">
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">0.192</item>
    </style>

    <style name="Header.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="Navigation.Item" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_height</item>
        <item name="android:padding">@dimen/navigation_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
